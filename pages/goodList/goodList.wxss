/* pages/goodList/goodList.wxss */
page{
  width: 100%;
  height: 100%;
  display: block;
}
.company{
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
}
.logo{
  width: 50rpx;
  height: 50rpx;
}
.companyName{
  font-size: 30rpx;
  margin-left: 10rpx;
}
.goodDemo{
  width: 100%;
  display: flex;
}
.checkBox{
  width: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goodMsg{
  width: 100%;
  display: flex;
}
/*  */
.goodImg{
  width: 198rpx;
  height: 198rpx;
  border-radius: 10rpx;
  position: relative;
  /* flex: 1;
  display: flex;
  align-items: center;
  justify-content: center; */
}
.goodContent{
  flex: 2;
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
}
.goodName{
  font-size: 30rpx;
}
.saleIcon{
  width: 49rpx;
  height: 57rpx;
  border-top-left-radius: 10rpx;
  position: absolute;
  left: 0;
  top: 0
}
