/* pages/withdraw/withdraw.wxss */
.header{
  background-color: #FFDA44;
}
.account{
  width: 100%;
  height: 165rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  border-bottom: 1px dashed black;
}
.remaining{
  font-size: 36rpx;
  color:#323232;
}
.remainingToday{
  font-size: 22rpx;
  color: #323232;
}
.title{
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
}
.withdrawInputBox{
  width: 100%;
  height: 178rpx;
  padding-left: 20rpx;
}
.withdrawInput{
  font-size: 70rpx;
  height: 80rpx;
}
.content{
  padding: 20rpx;
}
.contentTitle{
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.withdrawList{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.option{
  width: 216rpx;
  height: 93rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #eee;
  font-size: 30rpx;
}
._option{
  width: 216rpx;
  height: 93rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFDA44;
  font-size: 30rpx;
}
.optionText{
  display: flex;
  align-items: center;
  justify-content: center;
}
.wx_icon{
  width: 41rpx;
  height: 34rpx;
}
.zfb_icon{
  width: 35rpx;
  height: 28rpx;
}
.bank_icon{
  width: 41rpx;
  height: 25rpx;
}
.inputBg{
  width: 100%;
  height: 78rpx;
  border-radius: 8rpx;
  background-color: #eee;
  margin-top: 20rpx;
  display: flex;
}
.formList{
  margin-top: 90rpx;
}
.l_inputBg{
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.r_inputBg{
  flex: 5;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.submitBtn{
  height: 78rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFDA44;
  margin-top: 80rpx;
}